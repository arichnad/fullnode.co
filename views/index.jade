    var serverCount_timeline_query = {
    "timeframe": "last_day",
    "interval": "hour",
    "collection": "dev_bitcoin",
    "dimensions": ["timestamp"],
    "metrics": ["servers"],
    "realtime": true
    }
    
    var dc_pie_query = {
    "timeframe": "last_month",
    "interval": "day",
    "collection": "dev_bitcoin",
    "dimensions": ["dc"],
    "metrics": ["servers"],
    "realtime": true
    }
    
    var last_month_server_query = {
    "timeframe":"last_month",
    "interval":"day",
    "collection":"dev_bitcoin",
    "dimensions":["ipaddress"],
    "metrics":["servers"],
    "realtime":true
    
    }
    
    var last_all_server_query = {
    "timeframe":"last_year",
    "interval":"day",
    "collection":"dev_bitcoin",
    "dimensions":["ipaddress"],
    "metrics":["servers"],
    "realtime":true
    }
    
    $('#serverCount-timeline').Timeline({force: true,
    
    chart: {
    
    chart: {
    
    type: 'line'
    
    },
    
    plotOptions: {
    
    line: {
    
    color: 'rgba(87,173,104,0.8)',
    
    pointWidth: 15
    
    }
    
    }
    
    },query:serverCount_timeline_query});
    $('#dc-pie').Pie({query:dc_pie_query});
