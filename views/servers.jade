extends layout
block content
  .col-md-12
    .container
      h2 Server listing
      .servers
        table.table.table-striped.text-center
          thead
            th.text-center Creation date
            th.text-center DNS
            th.text-center IP
            th.text-center Provider
            th.text-center Status
            th.text-center Location
            th.text-center TTL
          tbody
            for server in serverlist
              if server.deleted == '1'
                tr(id="#{server.userid}" class="offline")
                  td #{moment(server.timestamp).format("YYYY-MM-DD HH:mm")}
                  if (!server.dns)
                    td Not set
                  else
                    td #{server.dns}.fullnode.co
                  td #{server.ip}
                  td #{server.provider}
                  if server.deleted == '1'
                    td Offline
                  else
                    td Live
                  td #{server.dc}
                  td #{moment(server.timestamp).add('days',30).fromNow()}
              else
                tr(id="#{server.userid}")
                  td #{moment(server.timestamp).format("YYYY-MM-DD HH:mm")}
                  if (!server.dns)
                    td Not set
                  else
                    td #{server.dns}.fullnode.co
                  td #{server.ip}
                  td #{server.provider}
                  if server.deleted == '1'
                    td Offline
                  else
                    td Live
                  td #{server.dc}
                  td #{moment(server.timestamp).add('days',30).fromNow()}

